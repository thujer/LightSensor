  23                   Resets the device if not fed within 1.997 s
  24          RETURNS: Nothing
  25          ************************************************************************/
  26          void watchdog_init ( void )
  27          {
  28   1        bit eacopy;
  29   1      
  30   1        // init reload value and prescaler
  31   1        // select Watchdog clock at 400kHz
  32   1        // start watchdog
  33   1        WDL = 0xC2;
  34   1        eacopy = EA;
  35   1        EA = 0;
  36   1        WDCON = 0xE5;
  37   1        WFEED1 = 0xA5;
  38   1        WFEED2 = 0x5A;
  39   1        EA = eacopy;
  40   1      
  41   1      }
